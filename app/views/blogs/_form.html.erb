<div class="center flex-column form">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center mt-2">Blog Form</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @blog do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <br>
        <%= f.label :title, "Blog Title :", class:"mt-3" %>
        <%= f.text_field :title, placeholder: "Enter Title Here", class:"mb-2 form-control" %>
        <br>
        <%= f.label :subtitle, "Release Date :" %>
        <%= f.text_field :subtitle, placeholder: "Enter Subtitle Here", class:"mb-2 form-control" %>
        <br>
        <%= f.label :photo, "Photo :" %>
        <%= f.file_field :photo, class:"mb-2 form-control" %>
        <br>
        <div class="d-flex justify-content-center">
          <%= f.submit "Save Blog", class:"btn-secondary border-0 shadow py-2 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
